      <classifier>features</classifier>
      <type>xml</type>
    </dependency>
-->
    <!-- main app -->
    <dependency>
      <groupId>org.opennms.features.nrtg</groupId>
      <artifactId>nrtg-collector</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>
</project>
